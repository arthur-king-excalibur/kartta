apiVersion: batch/v1
kind: Job
metadata:
  name: editor-empty-and-reinitialize-db
spec:
  template:
    metadata:
      labels:
        app: editor-empty-and-reinitialize-db
    spec:
      restartPolicy: Never
      containers:
        - image: gcr.io/${GCP_PROJECT_ID}/editor:latest
          name: editor
          command: ["bash"]
          args: ["/container/config/editor/empty-and-reinitialize-db-k8s"]
          volumeMounts:
          - name: container-tools
            mountPath: /container/tools
            readOnly: true
          - name: container-config-editor
            mountPath: container/config/editor
            readOnly: true
          - name: container-secrets
            mountPath: /container/secrets
            readOnly: true
      volumes:
      - name: container-tools
        configMap:
          name: container-tools
      - name: container-config-editor
        configMap:
          name: container-config-editor
      - name: container-secrets
        secret:
          secretName: container-secrets
