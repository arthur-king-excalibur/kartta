apiVersion: batch/v1
kind: Job
metadata:
  name: mapwarper-fs-initialization
spec:
  template:
    metadata:
      labels:
        app: mapwarper-fs-initialization
    spec:
      restartPolicy: Never
      containers:
        - image: gcr.io/${GCP_PROJECT_ID}/mapwarper:latest
          name: mapwarper
          command: ["bash"]
          args: ["/container/config/mapwarper/fs-initialize-k8s"]
          volumeMounts:
            - name: mapwarper-filestore-volume
              mountPath: /mnt/mapwarper/maps
              subPath: maps
            - name: mapwarper-filestore-volume
              mountPath: /app/public/shared
              subPath: shared
            - name: container-tools
              mountPath: /container/tools
              readOnly: true
            - name: container-config-mapwarper
              mountPath: container/config/mapwarper
              readOnly: true
            - name: container-secrets
              mountPath: /container/secrets
              readOnly: true
      volumes:
        - name: mapwarper-filestore-volume
          persistentVolumeClaim:
            claimName: mapwarper-fileserver-claim
            readOnly: false
        - name: container-tools
          configMap:
            name: container-tools
        - name: container-config-mapwarper
          configMap:
            name: container-config-mapwarper
        - name: container-secrets
          secret:
            secretName: container-secrets
